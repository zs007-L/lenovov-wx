/* pages/login/index.wxss */

.header {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20rpx 0 100rpx;
}

.header>view {
      width: 30%;
      height: 3rpx;
      background-color: #f0f0f0;
}

.header>text {
      font-size: 24rpx;
      color: #d6d6d6;
      padding: 0 20rpx;
}

.content {
      box-sizing: border-box;
      padding: 0 60rpx;
}

.content>view {
      margin-top: 30rpx;
}

.btn-wx {
      width: 100%;
      height: 80rpx;
      background-color: rgb(84, 175, 24);
      text-align: center;
      line-height: 80rpx;
      color: #fff;
      border-radius: 9rpx;
}

.btn-login,
.return-home {
      width: 100%;
      height: 80rpx;
      border: 2rpx solid #F8004C;
      text-align: center;
      line-height: 80rpx;
      border-radius: 9rpx;
      color: #F8004C;
}