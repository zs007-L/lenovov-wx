/* pages/detail/index.wxss */
.page-wrapper {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
}

.content {
      width: 100%;
      flex-grow: 1;
}

swiper,
image {
      width: 750rpx;
      height: 750rpx;
}

.content>.page-infor { 
      overflow: hidden; 
      box-sizing: border-box;
      padding: 0 20rpx;
}

.content>.page-infor>.name {
      font-size: 38rpx;
      margin: 10rpx 0;
}

.content>.page-infor>.remark {
      color: #B5B8BE;
      font-size: 24rpx;
}

.content>.page-infor>.price {
      color: #F47731;
      font-size: 40rpx;
      font-weight: 600;
      margin-top: 10rpx;
}

.footer {
      width: 100%;
      height: 100rpx;
      flex-shrink: 0;
      display: flex;
}

.footer>view {
      width: 110rpx;
      height: 100%;
      text-align: center;
      line-height: 120rpx;
      color: #fff;
      font-size: 32rpx;
      font-weight: 600;
}

.footer>view>image {
      width: 50rpx;
      height: 50rpx;
}
.footer>.btn-join {
      width: 340rpx;
      height: 100%;
      background-color: #FF9800;
      line-height: 100rpx;
}

.footer>.btn-purch {
      width: 340rpx;
      height: 100%;
      background-color: #F90856;
      line-height: 100rpx;
}