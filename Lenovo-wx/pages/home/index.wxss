/* pages/home/index.wxss */
page {
      width: 100%;
      height: 100%;
}
.page-wrapper {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
}
.header {
      background-color: #000;
      height: 50rpx;
      flex-shrink: 0;
      align-items: flex-start;
}
.content {
      width: 100%;
      /* height: 1500rpx; */
      display: flex;
      flex-grow: 1;
      background-color: #7a7a7a;
}

.left {
      width: 50px;
      height: 100%;
      background-color: #333;
      overflow: hidden;
      flex-shrink: 0;
}

.right {
      flex-grow: 1;
      width: 100%;
      height: 100%;
      overflow: hidden;
      background-color: #0000ff;
}

